{
  "compilerOptions": {
    "target": "es2015",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
    "outDir": "dist/es",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ]
}
